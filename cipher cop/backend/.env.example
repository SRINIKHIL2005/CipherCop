# CipherCop Environment Configuration
# Copy this file to .env and add your actual API keys

# Google Gemini API Key (for AI content analysis)
# Set this in your local .env file; DO NOT commit real keys to source control.
GOOGLE_API_KEY=your_gemini_api_key_here

# Google Safe Browsing API Key (CRITICAL - for real-time threat detection)
# Get this from: https://developers.google.com/safe-browsing/v4/get-started
# This is ESSENTIAL for website threat detection - high priority integration
# Google Safe Browsing API Key (set in .env, do not commit)
GOOGLE_SAFE_BROWSING_API_KEY=your_safe_browsing_api_key_here

# Optional: Additional threat intelligence sources
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
# ML Model Configuration
# The XGBoost model path is automatically detected
ML_MODEL_ENABLED=true
ML_CONFIDENCE_THRESHOLD=0.7

# Database Configuration
DATABASE_URL=sqlite:///ciphercop.db

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_PORT=5000

# Security Configuration
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=*
